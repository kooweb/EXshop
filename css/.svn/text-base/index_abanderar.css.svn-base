*{margin: 0;padding: 0;}
li{list-style: none;}
a{text-decoration: none;}
/*登录注册页面*/
#index_abanderar{width: 100%;/*height: 1000px;*//*background: hotpink;*/}
#abanderar_abrigo{width: 1220px;height: 500px;margin: 0 auto;/*background: gray;*/}
/*登录操作*/
#Login{width: 49%;float: left;margin-top: 35px;/*background: skyblue;*/}
.userTitle{font-size: 16px;padding-bottom: 10px;font-weight: bold;overflow: hidden;/*background: silver;*/}
.userContent{background: rgb(245,245,245);padding: 30px 10px 30px 10px;box-sizing: border-box;height: 390px;}
.userContent ul li{overflow: hidden;margin-bottom: 15px;}
.userContent .uName{color: rgb(100,100,100);font-size: 14px;width: 80px;text-align: right;}
.userContent ul li div{float: left;}
#LoginForm .input{width: 210px; border: 0px solid;height: 24px;line-height: 22px;padding-left: 5px;}
.userContent .uError{background: rgb(230,0,16);height: 23px;width: 200px;margin-left: 10px;color: rgb(200,200,200);text-align: center;font-size: 14px;font-weight: bold; }
.userContent .uSumbit{text-align: right;margin-top: -25px;height: 85px;}
.userContent .uSumbit a{width: 120px;height: 30px;line-height: 30px;text-align: center;display: block;float: right;background: rgb(230,0,16);color: #FFFFFF;font-size: 14px;}
#uniteLogin{float: right;margin-left: 30px;margin-top: 5px;}
#uniteLogin a{background: rgb(245,245,245);width: 30px;}
#uniteLogin a img{width: 24px;height: 24px; position: relative;top: 0px;right: 35px;}

/*注册操作*/
#abanderar{width: 49%;float: right;margin-top: 35px;/*background: deepskyblue;*/position: relative; right: 0px;}
#abanderar #authCode{width: 80px;height: 25px;position: relative;top: 0px;left: 73px;}
#registerForm .input{width: 210px; border: 0px solid;height: 24px;line-height: 22px;padding-left: 5px;}
.userContent .uMessage{font-size: 14px;position: relative;padding-left: 100px;bottom: 0px;}
.userContent .uMessage a{color: rgb(100,100,100);}
#ajaxRegister{position: relative;top: 10px;top: 42px;}
