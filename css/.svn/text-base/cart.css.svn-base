*{margin: 0;padding: 0;}

#cart{margin:0 auto;width:1220px;height:auto;clear:both;/*background: skyblue;*/}
#cartCart{font-size:14px;height:15px;line-height:15px; color:rgb(100,100,100); margin:30px 0px 10px 0px; }
#cartTitle {
	background:rgb(245,245,245);
	width:1220px;
	height:37px;
	
	margin-bottom:5px;
	
}
#cartTitle ul{float:right;padding-right:30px;}
#cartTitle ul li{float:left;display:inherit;line-height:37px;height:37px;margin-left:-14px;width:227px;text-align:center;}
.cartDef{background:url(../../../images/cartdef.png) no-repeat; color:#FFFFFF;}
.cartActive{background:url(../../../images/cartselect.png) no-repeat; color:#FFFFFF;}

#cartList .caption{height:30px;line-height:30px;border:1px solid #CCC;margin-top:10px;}
#cartList .caption div{text-align:center;float:left;color:#000000; }
#cartList .caption #capName{width:560px; }
#cartList .caption #capPrice{width:230px;}
#cartList .caption #capNum{width:200px;}
#cartList .caption #capOperate{width:205px;}

#cartList .caption #capoName{width:560px; }
#cartList .caption #capoPrice{width:230px;}
#cartList .caption #capoNum{width:200px;}
#cartList .caption #capoOperate{width:205px;}


#cartList{background:#FFFFFF; color:#000000;}
.cartList{color:#000000;height:80px;border:1px solid #CCC;border-top:0px;}
#cartList a{color:#000000;font-size:12px;}
.cartList div{float:left;height:80px;line-height:80px;} 
.cartList .capName{width:560px;overflow:hidden;}
.cartList .capName img{ vertical-align:middle; border: #CCCCCC solid 1px; margin-left:12px;}
.cartList .capPrice{width:230px; text-align:center; color:rgb(250,70,70);}
.cartList .capNum{width:200px; text-align:center;}
.cartList .capOperate{width:205px; text-align:center;line-height:40px;}
.text,.textlp{width:50px;text-align:center;height:19px;}
#cartList .caption th{color:#000000}
#cartList td{text-align:center;}
.textLeft{text-align:left;}
.cartName{text-align:left;height:50px;line-height:50px;}
.cartName img{ vertical-align:middle;}

.cutNum,.addNum,.cutNumL,.addNumL{cursor:pointer;width:26px;height:25px; position:relative;top:8px;}

.clearCart{line-height:40px;width:100%}
.clearCart div{float:right;clear:both;}
#cartPrice{height:50px;padding-top:20px; }
#cartPrice tr{height:30px;}
.cartColor{color:rgb(250,70,70)}
#figure{margin-top:10px;height:110px;}
#figure div{margin-left:10px;height:28px;width:120px;text-align:center;line-height:28px;float:right;font-size:16px;}
#figure div img{ vertical-align:middle;width: 24px;height: 20px;position: relative;top: -3px;}
#figure div a{color:#fff;}
.goOn{background:rgb(140,200,0);}
.toSettlement{background:rgb(250,70,70);}